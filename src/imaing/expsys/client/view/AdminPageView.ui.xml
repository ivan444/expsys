<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>
	  <g:TextBox ui:field="shopName" text="Title" width="200" />
	  <g:TextBox ui:field="shopEmail" text="E-mail" width="200" />
	  <g:PasswordTextBox ui:field="shopPassword" text="Password" width="200" />  
	  <g:Button ui:field="btnAddShop" text="Add shop"/>
	  
	  <g:HTMLPanel ui:field="shopsPanel"/>
	  <g:Button ui:field="btnDelShop" text="Delete shop"/>
	  
	</g:HTMLPanel>
</ui:UiBinder> 